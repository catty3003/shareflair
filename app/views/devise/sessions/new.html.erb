
<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
          <h1>Sign in</h1>
      </div>

		<div class="col-lg-8 col-lg-offset-2">
		   <div class="well">
		      <div class="panel panel-info">
		        <div class="panel-body">

		        <div class="form-group has-success">

					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					  <div class="form-group has-success"><%= f.label :email %><br />
					  <%= f.email_field :email, :autofocus => true, class: "form-control" %></div>

					  <div class="form-group has-success"><%= f.label :password %><br />
					  <%= f.password_field :password, class: "form-control" %></div>

					  <% if devise_mapping.rememberable? -%>
					    <div><%= f.check_box :remember_me %>
					    <%= f.label :remember_me %></div>
					  <% end -%>

					  <div class="actions"><%= f.submit "Sign in", class: "btn btn-success" %></div>
					<% end %>

		        </div>
		      </div>
		    </div>
		      <div><%= render "devise/shared/links" %></div>
		  </div>
		</div>

		 
  </div>
</div>
       

