<%= form_tag("/products", method: "get")  do %>   
<div class="row">

  <div class="col-md-2">
		<div class="form-group has-success">
		  <label class="control-label" for="inputSuccess"><%= label_tag :category %></label>
			<%= select_tag :category_id, options_for_select(Category.all.collect {|c| [ c.name, c.id ] }), :multiple => true, class: "form-control" %>
		</div>
	</div>



	<div class="col-md-2">
		<div class="form-group has-success">
		  <label class="control-label" for="inputSuccess"><%= label_tag :user%></label>
			<%= select_tag :user_id, options_for_select(User.all.collect {|c| [ c.username, c.id ] }), :multiple => true, class: "form-control" %>
		</div>
	</div>

	<div class="col-md-2">
		<div class="form-group has-success">
		  <label class="control-label" for="inputSuccess"><%= label_tag :city%></label>
			<%= select_tag :user_id, options_for_select(User.all.collect {|c| [ c.city, c.id ] }), :multiple => true, class: "form-control" %>
		</div>
	</div>

  <div class="col-md-12">
  	<%= submit_tag "Search" , class: "btn btn-success btn-sm btn-block" %>
		</div>		
	</div>

</div>
<% end %>
