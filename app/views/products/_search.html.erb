<%= form_tag("/products", method: "get")  do %>   
	<%= select_tag :category_id, options_for_select(Category.all.collect {|c| [ c.name, c.id ] }) %>
	<%= select_tag :target_group, options_for_select(Product.all.collect {|c| [ c.target_group] }) %>
	<%= select_tag :size, options_for_select(Product.all.group("size").collect {|c| [ c.size] }) %>           
	
	<%= submit_tag("Search") %>
<% end %>
